@model IEnumerable<LearnBridge_E_LearningPlatform.Models.Teacher>
@{
    ViewData["Title"] = "Teachers";
}
<h2>Teachers</h2>
<p><a asp-action="Create" class="btn btn-primary">Add New Teacher</a></p>
<table  class=" table table-bordered table-striped">
    <thead>>
        <tr>
            <th>Name</th>
            <th>Expertise</th>
            <th>Bio</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher?Name</td>
                <td>@teacher.Expertise</td>
                <td>@teacher.Bio</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@teacher.TeacherId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
}
</tbody>
</table>
