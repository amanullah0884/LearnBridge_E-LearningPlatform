@model LearnBridge_E_LearningPlatform.Models.Teacher

@{
    ViewData["Title"] = "Delete Teacher";
}

<h2>Delete Teacher</h2>

<h4>Are you sure you want to delete this teacher?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.User?.Name</dd>

        <dt class="col-sm-2">Expertise</dt>
        <dd class="col-sm-10">@Model.Expertise</dd>

        <dt class="col-sm-2">Bio</dt>
        <dd class="col-sm-10">@Model.Bio</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="TeacherId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
