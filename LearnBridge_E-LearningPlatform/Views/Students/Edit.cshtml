@model LearnBridge_E_LearningPlatform.Models.Student

@{
    ViewData["Title"] = "Edit Student";
    var users = ViewBag.Users as SelectList;
}

<h2>Edit Student</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="StudentId" />

    <div class="form-group">
        <label asp-for="UserId">Assign User</label>
        <select asp-for="UserId" class="form-control" asp-items="users">
            <option value="">--Select User--</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentName"></label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WeakSubjects"></label>
        <input asp-for="WeakSubjects" class="form-control" />
        <span asp-validation-for="WeakSubjects" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Update</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
