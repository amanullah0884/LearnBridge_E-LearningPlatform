@model IEnumerable<LearnBridge_E_LearningPlatform.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>
<p><a asp-action="Create" class="btn btn-primary">Add New Course</a></p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Level</th>
            <th>TeacherName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>@course.Level</td>
                <td>@course.Teacher?Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
